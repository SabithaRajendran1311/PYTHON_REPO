todo_list=[]
while True:
    print("option:")
    print("1.add task")
    print("2.view tasks")
    print("3.exit")
    choice=input("enter your choice:")
    if choice=='1':
        task=input("enter task:")
        todo_list.append(task)
    elif choice=='2':
        print("tasks:")
        for i,task in enumerate(todo_list,1):
            print(f"{i}.{task}")
    elif choice=='3':
        break
    else:
        print("invalid choice")
        
    
